# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks

# Global properties
separator=false
separator_block_width=15

[time]
command=~/.config/i3blocks/scripts/date
interval=1

[arch-update]
command=~/.config/i3blocks/scripts/arch-update -y
interval=3600
markup=pango

[audio]
command=~/.config/i3blocks/scripts/audio
interval=repeat

[brightness]
command=~/.config/i3blocks/scripts/brightness
interval=repeat

[weather]
command=~/.config/i3blocks/scripts/weather
interval=3600

[battery]
command=~/.config/i3blocks/scripts/battery
interval=repeat

